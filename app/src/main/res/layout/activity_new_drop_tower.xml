<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swathi.tourbot1.NewDropTower">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Next destination"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DROP TOWER"
        android:textStyle="bold"
        android:textSize="40dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Play"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#008000"
        android:onClick="play_func"
        android:id="@+id/button_play_drop_tower"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/textView13"
        android:layout_toLeftOf="@+id/button_pause_drop_tower"
        android:layout_toStartOf="@+id/button_pause_drop_tower" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Pause"
        android:textSize="30dp"
        android:onClick="pause_func"
        android:textStyle="bold"
        android:background="#FFA07A"
        android:id="@+id/button_pause_drop_tower"
        android:layout_alignTop="@+id/button_play_drop_tower"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Stop"
        android:textSize="30dp"
        android:textStyle="bold"
        android:onClick="stop_func"
        android:background="#FF0000"
        android:id="@+id/button_stop_drop_tower"
        android:layout_alignTop="@+id/button_pause_drop_tower"
        android:layout_toRightOf="@+id/button_pause_drop_tower"
        android:layout_toEndOf="@+id/button_pause_drop_tower" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Change Destination"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#c97f7f"
        android:layout_marginTop="80dp"
        android:id="@+id/button_chng_destn_drop_tower"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_below="@+id/button_pause_drop_tower" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Search Website"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#1E90FF"
        android:id="@+id/button_srch_web_drop_tower"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/button_chng_destn_drop_tower"
        android:layout_alignRight="@+id/button_chng_destn_drop_tower"
        android:layout_alignEnd="@+id/button_chng_destn_drop_tower"
        android:layout_alignLeft="@+id/button_chng_destn_drop_tower"
        android:layout_alignStart="@+id/button_chng_destn_drop_tower" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Tour"
        android:background="#BA55D3"
        android:id="@+id/button_end_tour_drop_tower"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;--Back"
        android:onClick="onPause"
        android:background="#778899"
        android:id="@+id/button_back_new_drop_tower"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Ask questions"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="#FFFF66"
        android:id="@+id/button_ask_qstns_new_drop_tower"
        android:layout_below="@+id/button_srch_web_drop_tower"
        android:layout_marginTop="60dp"
        android:layout_alignRight="@+id/button_srch_web_drop_tower"
        android:layout_alignEnd="@+id/button_srch_web_drop_tower"
        android:layout_alignLeft="@+id/button_srch_web_drop_tower"
        android:layout_alignStart="@+id/button_srch_web_drop_tower" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:id="@+id/imageView2"
        android:src="@drawable/psu_logo1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

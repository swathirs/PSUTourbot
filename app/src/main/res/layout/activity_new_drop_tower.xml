<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swathi.tourbot1.NewDropTower">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Next Destination"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DROP TOWER"
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Play/Resume"
        android:background="#008000"
        android:onClick="play_func"
        android:id="@+id/button_play_drop_tower"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView13"
        android:layout_toLeftOf="@+id/textView13" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:onClick="pause_func"
        android:background="#FFA07A"
        android:id="@+id/button_pause_drop_tower"
        android:layout_alignTop="@+id/button_play_drop_tower"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:onClick="stop_func"
        android:background="#FF0000"
        android:id="@+id/button_stop_drop_tower"
        android:layout_alignTop="@+id/button_pause_drop_tower"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Destination"
        android:background="#c97f7f"
        android:id="@+id/button_chng_destn_drop_tower"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Website"
        android:background="#1E90FF"
        android:id="@+id/button_srch_web_drop_tower"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/button_chng_destn_drop_tower"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13"
        android:layout_alignLeft="@+id/button_chng_destn_drop_tower"
        android:layout_alignStart="@+id/button_chng_destn_drop_tower" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Tour"
        android:background="#BA55D3"
        android:id="@+id/button_end_tour_drop_tower"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

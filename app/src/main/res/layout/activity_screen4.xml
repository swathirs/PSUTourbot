<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swathi.tourbot1.Screen4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/choose_a_destination"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_tour"
        android:background="#BA55D3"
        android:id="@+id/button_end_tour_screen4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lt_back"
        android:id="@+id/button_back_choose_destn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:background="@drawable/eb_map"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableRow"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableRow2">

        <Button
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="Drop Tower                  (5th Floor) 4 min"
            android:background="#FF9966"
            android:id="@+id/button_drop_tower" />

        <Button
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="Robot Theatre (Basement) 0 min"
            android:background="#FF6666"
            android:id="@+id/button_robot_theatre" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow2"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableRow3">

        <Button
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="Data Center (Basement) 8 min"
            android:background="#0066FF"
            android:id="@+id/button_data_center" />

        <Button
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="Rocket Lab                      (Basement) 0 min"
            android:background="#D8BFD8"
            android:id="@+id/button_rocket_lab" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow3"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="Student Services                         (1st floor) 2 min"
            android:background="#CC6699"
            android:id="@+id/button_student_services" />

        <Button
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="Water Reclamation      (2nd floor) 0 min"
            android:background="#87CEFA"
            android:id="@+id/button_water_reclamation" />
    </TableRow>

</RelativeLayout>

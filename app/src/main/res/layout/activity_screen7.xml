<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swathi.tourbot1.Screen7">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Tour"
        android:id="@+id/button_end_tour_screen7"
        android:layout_alignParentBottom="true"
        android:background="#BA55D3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Back to STUDENT SERVICES"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView_back_to_stdnt_svcs"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Next Destination"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textStyle="bold"
        android:onClick="play_func"
        android:background="#008000"
        android:id="@+id/button_play_stdnt_srvcs"
        android:layout_below="@+id/textView_back_to_stdnt_svcs"
        android:layout_toLeftOf="@+id/button_pause_stdnt_srvcs"
        android:layout_toStartOf="@+id/button_pause_stdnt_srvcs"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:textStyle="bold"
        android:background="#FFA07A"
        android:onClick="pause_func"
        android:id="@+id/button_pause_stdnt_srvcs"
        android:layout_alignTop="@+id/button_play_stdnt_srvcs"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:textStyle="bold"
        android:background="#FF0000"
        android:onClick="stop_func"
        android:id="@+id/button_stop_stdnt_srvcs"
        android:layout_alignTop="@+id/button_pause_stdnt_srvcs"
        android:layout_toRightOf="@+id/button_pause_stdnt_srvcs"
        android:layout_toEndOf="@+id/button_pause_stdnt_srvcs" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Destination"
        android:background="#c97f7f"
        android:id="@+id/button_chng_destn_stdnt_srvcs"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_marginTop="22dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Website"
        android:background="#1E90FF"
        android:id="@+id/button_srch_web_stdnt_srvcs"
        android:layout_below="@+id/button_chng_destn_stdnt_srvcs"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/button_chng_destn_stdnt_srvcs"
        android:layout_alignEnd="@+id/button_chng_destn_stdnt_srvcs"
        android:layout_alignLeft="@+id/button_chng_destn_stdnt_srvcs"
        android:layout_alignStart="@+id/button_chng_destn_stdnt_srvcs" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you wish to go elsewhere while Jeeves is still talking,"
        android:id="@+id/textView19"
        android:layout_below="@+id/button_play_stdnt_srvcs"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please pause or stop him before clicking a button."
        android:id="@+id/textView20"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Jeeves likes to be polite)"
        android:id="@+id/textView21"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;--Back"
        android:background="#778899"
        android:id="@+id/button_back_student_services"
        android:layout_alignTop="@+id/button_end_tour_screen7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask Questions"
        android:background="#FFFF66"
        android:id="@+id/button_ask_qstn_student_services"
        android:layout_below="@+id/button_srch_web_stdnt_srvcs"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/button_srch_web_stdnt_srvcs"
        android:layout_alignEnd="@+id/button_srch_web_stdnt_srvcs"
        android:layout_alignLeft="@+id/button_srch_web_stdnt_srvcs"
        android:layout_alignStart="@+id/button_srch_web_stdnt_srvcs" />


</RelativeLayout>

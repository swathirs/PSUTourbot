<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swathi.tourbot1.Screen7">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Tour"
        android:id="@+id/button_end_tour_screen7"
        android:layout_alignParentBottom="true"
        android:background="#BA55D3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Back to STUDENT SERVICES"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView_back_to_stdnt_svcs"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Next Destination"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Play/Resume"
        android:onClick="play_func"
        android:background="#008000"
        android:id="@+id/button_play_stdnt_srvcs"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView_back_to_stdnt_svcs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:background="#FFA07A"
        android:onClick="pause_func"
        android:id="@+id/button_pause_stdnt_srvcs"
        android:layout_alignTop="@+id/button_play_stdnt_srvcs"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:background="#FF0000"
        android:onClick="stop_func"
        android:id="@+id/button_stop_stdnt_srvcs"
        android:layout_alignTop="@+id/button_pause_stdnt_srvcs"
        android:layout_alignLeft="@+id/button_end_tour_screen7"
        android:layout_alignStart="@+id/button_end_tour_screen7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Destination"
        android:background="#c97f7f"
        android:id="@+id/button_chng_destn_stdnt_srvcs"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Website"
        android:background="#1E90FF"
        android:id="@+id/button_srch_web_stdnt_srvcs"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/button_chng_destn_stdnt_srvcs"
        android:layout_alignLeft="@+id/button_chng_destn_stdnt_srvcs"
        android:layout_alignStart="@+id/button_chng_destn_stdnt_srvcs"
        android:layout_alignRight="@+id/button_chng_destn_stdnt_srvcs"
        android:layout_alignEnd="@+id/button_chng_destn_stdnt_srvcs" />


</RelativeLayout>

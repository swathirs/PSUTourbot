<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swathi.tourbot1.DropTowerScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Next Destination:"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DROP TOWER"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView12"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Tour"
        android:id="@+id/button_end_tour_drop_twr_screen"
        android:background="#BA55D3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Play/Resume"
        android:onClick="play_func"
        android:id="@+id/button_play_drop_tower"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:onClick="pause_func"
        android:id="@+id/button_pause_drop_tower"
        android:layout_alignTop="@+id/button_play_drop_tower"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:onClick="stop_func"
        android:id="@+id/button_stop_drp_twr"
        android:layout_alignBottom="@+id/button_pause_drop_tower"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Destination"
        android:id="@+id/button_change_destn_drop_twr"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Website"
        android:id="@+id/button_srch_web_drp_twr"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/button_change_destn_drop_twr"
        android:layout_alignLeft="@+id/button_change_destn_drop_twr"
        android:layout_alignStart="@+id/button_change_destn_drop_twr"
        android:layout_alignRight="@+id/button_change_destn_drop_twr"
        android:layout_alignEnd="@+id/button_change_destn_drop_twr" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swathi.tourbot1.DropTower_ResumeScreen">

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Change Destination"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#c97f7f"
        android:id="@+id/button_chng_destn_drp_twr_rsm_screen"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Search Website"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#1E90FF"
        android:id="@+id/button_search_website_drp_rsm_screen"
        android:layout_below="@+id/button_chng_destn_drp_twr_rsm_screen"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/button_chng_destn_drp_twr_rsm_screen"
        android:layout_alignEnd="@+id/button_chng_destn_drp_twr_rsm_screen"
        android:layout_alignLeft="@+id/button_chng_destn_drp_twr_rsm_screen"
        android:layout_alignStart="@+id/button_chng_destn_drp_twr_rsm_screen" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Resume Tour"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#008000"
        android:id="@+id/button_resume_tour_drp_twr_rsm_screen"
        android:layout_below="@+id/button_search_website_drp_rsm_screen"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/button_search_website_drp_rsm_screen"
        android:layout_alignEnd="@+id/button_search_website_drp_rsm_screen"
        android:layout_alignLeft="@+id/button_search_website_drp_rsm_screen"
        android:layout_alignStart="@+id/button_search_website_drp_rsm_screen" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:src="@drawable/psu_logo1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp" />
</RelativeLayout>

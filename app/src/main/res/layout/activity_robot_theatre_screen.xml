<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swathi.tourbot1.RobotTheatreScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Next destination"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ROBOT THEATRE"
        android:textSize="40dp"
        android:textStyle="bold"
        android:id="@+id/textView16"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The robot theatre is a fun and fascinating place."
        android:id="@+id/textView19"
        android:textSize="30dp"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Change Destination"
        android:textSize="30dp"
        android:background="#c97f7f"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:id="@+id/button_change_destination_robot_theatre"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Search Website"
        android:textSize="30dp"
        android:background="#1E90FF"
        android:textStyle="bold"
        android:id="@+id/button_search_website_robot_theatre"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/button_change_destination_robot_theatre"
        android:layout_alignLeft="@+id/button_change_destination_robot_theatre"
        android:layout_alignStart="@+id/button_change_destination_robot_theatre"
        android:layout_alignRight="@+id/button_change_destination_robot_theatre"
        android:layout_alignEnd="@+id/button_change_destination_robot_theatre" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Ask Questions"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:background="#FFFF66"
        android:id="@+id/button_ask_qstns_robot_theatre"
        android:layout_below="@+id/button_search_website_robot_theatre"
        android:layout_alignLeft="@+id/button_search_website_robot_theatre"
        android:layout_alignStart="@+id/button_search_website_robot_theatre"
        android:layout_alignRight="@+id/button_search_website_robot_theatre"
        android:layout_alignEnd="@+id/button_search_website_robot_theatre" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;--Back"
        android:background="#778899"
        android:id="@+id/button_back_robot_theatre"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Tour"
        android:background="#BA55D3"
        android:id="@+id/button_end_tour_robot_theatre"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stay tuned for exciting adventures. I hope"
        android:textSize="30dp"
        android:id="@+id/textView28"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="to audition for them someday."
        android:textSize="30dp"
        android:id="@+id/textView29"
        android:layout_below="@+id/textView28"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:id="@+id/imageView2"
        android:src="@drawable/psu_logo1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

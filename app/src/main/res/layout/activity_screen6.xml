<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swathi.tourbot1.Screen6">

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Change Destination"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#c97f7f"
        android:id="@+id/button_chng_destn_screen6"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Search Website"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/button_srch_website"
        android:background="#1E90FF"
        android:layout_below="@+id/button_chng_destn_screen6"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/button_chng_destn_screen6"
        android:layout_alignEnd="@+id/button_chng_destn_screen6"
        android:layout_alignLeft="@+id/button_chng_destn_screen6"
        android:layout_alignStart="@+id/button_chng_destn_screen6" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Resume Tour"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#008000"
        android:id="@+id/button_rsme_tour"
        android:layout_below="@+id/button_srch_website"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/button_srch_website"
        android:layout_alignStart="@+id/button_srch_website"
        android:layout_alignRight="@+id/button_srch_website"
        android:layout_alignEnd="@+id/button_srch_website" />
</RelativeLayout>
